<% layout("/layouts/boilerplate.ejs") %>

<body>

    <h3>All Listings</h3>

    <!-- <form action="/listing/new" method="get">
        <button type="submit">Create New Listing</button>
    </form> -->

    <div class="row row-cols-lg-3 row row-cols-md-2 row row-cols-sm-1">
        <% for(listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="listing-list">
                <div class="card col">
                    <img src="<%= listing.image %>" class="card-img-top" alt="listingImg" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b> <br>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night <br>
                            <%= listing.description %> <br>
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
    
</body>
