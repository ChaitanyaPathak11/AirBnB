<% layout("/layouts/boilerplate.ejs") %>

<body>

    <h3>Create a New Listing</h3>
    
    <form action="/listings" method="post">

        <input type="text" name="listing[title]" placeholder="Enter Residance Name">
        <br><br>
        <textarea name="listing[description]" placeholder="Enter Description" rows="10" cols="50"></textarea>
        <br><br>
        <input type="text" name="listing[image]" placeholder="Enter Image Link">
        <br><br>
        <input type="text" name="listing[price]" placeholder="Enter Price">
        <br><br>
        <input type="text" name="listing[country]" placeholder="Enter Country">
        <br><br>
        <input type="text" name="listing[location]" placeholder="Enter Location">
        <br><br>
        <button type="submit">Add</button>
    </form>

</body>
