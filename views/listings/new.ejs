<% layout("/layouts/boilerplate.ejs") %>

<body>

    <div class="row mt-3">
        <div class="col-6 offset-3">

            <br>

            <h3>Create a New Listing</h3>

            <br>
            
            <form action="/listings" method="post">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" placeholder="Enter Residance Name" class="form-control">
                </div>

                <div class="mb-3">
                    <label for="title" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="Enter Description" rows="10" cols="50" class="form-control"></textarea>
                </div>
                
                <div class="mb-3">
                    <label for="title" class="form-label">Image</label>
                    <input type="text" name="listing[image]" placeholder="Enter Image Link" class="form-control">
                </div>
                

                <div class="row">

                    <div class="mb-3 col-md-4">
                        <label for="title" class="form-label">Price</label>
                        <input type="number" name="listing[price]" placeholder="Enter Price" class="form-control">
                    </div>
                    
                    <div class="mb-3 col-md-8">
                        <label for="title" class="form-label">Country</label>
                        <input type="text" name="listing[country]" placeholder="Enter Country" class="form-control">
                    </div>
    
                </div>

                
                <div class="mb-3">
                    <label for="title" class="form-label">Location</label>
                    <input type="text" name="listing[location]" placeholder="Enter Location" class="form-control">
                </div>

                <button type="submit" class="btn btn-dark add-btn form-control mt-3">Add</button>

                <br><br><br>

            </form>

        </div>
    </div>

</body>
